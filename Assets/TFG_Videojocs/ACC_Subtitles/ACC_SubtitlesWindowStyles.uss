.settings-container{
    margin-top: 10px;
    padding-top: 10px;
    margin-left: 4px;
    margin-right: 4px;
    border-top-color: #343434;
    border-top-width: 1px;
}

.settings-title{
    margin-right: auto;
    margin-bottom: 4px;
    -unity-font-style: bold;
}

.option-container{
    display: flex;
    flex-direction: row;
    margin-top: 6px;
}

.option-title{
    width: 50%;
}

.option-input{
    width: 49.5%;
}

.bottom-container{
    display: flex;
    flex-direction: row;
    margin-top: 12px;
    margin-right: 4px;
}

.add-subtitles-container{
    display: flex;
    flex-direction: row;
    margin-left: auto;
    align-self: center;
}

.create-subtitle-button{
    font-size: 12px;
    padding: 4px 6px;
}

.add-subtitles-label{
    -unity-text-align: middle-center;
    margin-right: 6px;
    font-size: 12px;
}

.add-subtitle-button{
    margin: 0px;
    margin-left: 1px;
    padding: 4px 6px;
    font-size: 12px;
}

.font-size-container{
    display: flex;
    flex-direction: row;
    margin-top: 6px;
}

.font-size-slider{
    width: 88%;
}

.font-size-label{
    margin-left: -2px;
    width: 57%;
}

.font-size-field{
    width: 10%;
}

